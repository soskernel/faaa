<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent"
                                             tools:context=".MainActivity">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="vertical"
            android:scrollbars="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:id="@+id/v_img_classify"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick">

                    <ImageView
                            android:id="@+id/iv_img_classify_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="12dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/image_classfication"
                            android:scaleType="fitCenter"/>

                    <TextView
                            android:id="@+id/iv_img_classify_title"
                            android:layout_below="@id/iv_img_classify_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            android:text="物品分类"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:singleLine="false"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/v_obj_detect"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick">

                    <ImageView
                            android:id="@+id/iv_obj_detect_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="12dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/object_detection"
                            android:scaleType="fitCenter"/>

                    <TextView
                            android:id="@+id/iv_obj_detect_title"
                            android:layout_below="@id/iv_obj_detect_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            android:text="物品检测"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:singleLine="false"/>
	        </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
            <RelativeLayout
                        android:id="@+id/v_face_detect"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick">

                    <ImageView
                            android:id="@+id/iv_face_detect_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="12dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/face_detection"
                            android:scaleType="fitCenter"/>

                    <TextView
                            android:id="@+id/iv_face_detect_title"
                            android:layout_below="@id/iv_face_detect_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            android:text="人脸抓拍"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:singleLine="false"/>
	    </RelativeLayout>

	    <RelativeLayout
                        android:id="@+id/v_face_recognize"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick">

                    <ImageView
                            android:id="@+id/iv_face_recognize_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="12dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/face_recognization"
                            android:scaleType="fitCenter"/>

                    <TextView
                            android:id="@+id/iv_face_recognize_title"
                            android:layout_below="@id/iv_face_recognize_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            android:text="人脸识别"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:singleLine="false"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
            <RelativeLayout
                    android:id="@+id/v_character_recognition"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick">

                <ImageView
                        android:id="@+id/iv_character_recognition_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/character_recognition"
                        android:scaleType="fitCenter"/>

                <TextView
                        android:id="@+id/iv_character_recognition_title"
                        android:layout_below="@id/iv_character_recognition_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:text="文字识别"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:singleLine="false"/>
            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/v_pose_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick">

                <ImageView
                        android:id="@+id/iv_pose_estimate_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pose_estimation"
                        android:scaleType="fitCenter"/>

                <TextView
                        android:id="@+id/iv_pose_estimate_title"
                        android:layout_below="@id/iv_pose_estimate_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:text="姿态估计"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:singleLine="false"/>
            </RelativeLayout>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
